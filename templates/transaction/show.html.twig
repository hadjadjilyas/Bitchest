{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
<div class="container">
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Date_transaction</th>
                <td>{{ transaction.dateTransaction ? transaction.dateTransaction|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ transaction.quantity }}</td>
            </tr>
            <tr>
                <th>Transaction_amount</th>
                <td>{{ transaction.transactionAmount }}</td>
            </tr>
            <tr>
                <th>Transaction_type</th>
                <td>{{ transaction.transactionType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_transaction_index') }}">back to list</a>

    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transaction/_delete_form.html.twig') }}

</div>
{% endblock %}
