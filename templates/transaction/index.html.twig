{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block body %}
<div class="container">
    <h3  class="mt-4">Transaction index</h3>

   <div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Date_transaction</th>
                <th>cryptomonnaie</th>
                <th>Quantity</th>
                <th>Transaction_amount</th>
                <th>Transaction_type</th>
                <th>user_transaction_name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr class="table-primary">
                <th scope="row">{{transaction.id}}</th>
                {# <td>{{ transaction.id }}</td> #}
                <td>{{ transaction.dateTransaction ? transaction.dateTransaction|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ transaction.crypto ? transaction.crypto.name : 'N/A' }}</td>
                <td>{{ transaction.quantity }}</td>
                <td>{{ transaction.transactionAmount }}</td>
                <td>{{ transaction.transactionType }}</td>
                <td>{{ transaction.user.firstName }}</td>
                <td>
                <div class"">
                    <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}" class="text-primary text-decoration-none">show</a>
                    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}" class="text-danger text-decoration-none">edit</a> 
                </div>
                    
                 </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a href="{{ path('app_transaction_new') }}" class=" btn btn-primary">Create new</a>
     {# <div class="navigation mt-4 d-flex justify-content-center">
           {{ knp_pagination_render(transactions) }}
    </div> #}
</div>    
{% endblock %}
