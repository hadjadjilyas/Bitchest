{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block body %}
    <h1>Transaction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_transaction</th>
                <th>cryptomonnaie</th>
                <th>Quantity</th>
                <th>Transaction_amount</th>
                <th>Transaction_type</th>
                <th>user_transaction_name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.dateTransaction ? transaction.dateTransaction|date('Y-m-d H:i:s') : '' }}</td>
               <td>{{ transaction.crypto ? transaction.crypto.name : 'N/A' }}</td>
                <td>{{ transaction.quantity }}</td>
                <td>{{ transaction.transactionAmount }}</td>
                <td>{{ transaction.transactionType }}</td>
                 <td>{{ transaction.user.firstName }}</td>
                <td>
                    <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}">show</a>
                    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transaction_new') }}">Create new</a>
{% endblock %}
