{% extends 'base.html.twig' %}

{% block title %}Wallet index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            padding-top: 56px;
            background-color: #f8f9fa;
            color: #495057;
        }

        h1 {
            margin-top: 20px;
            color: #343a40;
            font-size: 2.5em;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            border-bottom: 2px solid #17a2b8;
            padding-bottom: 10px;
        }

        .table-container {
            margin-top: 20px;
        }

        .table-container table {
            width: 100%;
            border-collapse: collapse;
        }

        .table-container th, .table-container td {
            text-align: center;
            padding: 15px;
            vertical-align: middle;
        }

        .thead-custom {
            background-color: #17a2b8;
            color: #fff;
        }

        .table-container tbody tr:hover {
            background-color: #e9ecef;
        }

        .actions-btn-group a {
            color: #212529;
            margin-right: 10px; /* Ajout d'un espace entre les liens Show et Edit */
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
        }

        .actions-btn-group a:hover {
            color: #0056b3;
        }

        .no-records {
            text-align: center;
            padding: 20px;
            font-weight: bold;
            font-size: 18px;
        }

        .create-new-btn {
            margin-top: 20px;
            text-align: right;
        }

        .btn-create-new {
            background-color: #28a745;
            color: #fff;
            padding: 10px 20px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-create-new:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container table-container">
        <h1 class="display-4">Wallet Index</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-custom">
                    <tr>
                        <th>Id</th>
                        <th>Total Balance</th>
                        <th>Crypto Balance</th>
                        <th>Usable Balance</th>
                        {# <th>Actions</th> #}
                    </tr>
                </thead>
                <tbody>
                    {% for wallet in wallets %}
                        <tr>
                            <td>{{ wallet.id }}</td>
                            <td>{{ wallet.totalBalance }}</td>
                            <td>{{ wallet.cryptoBalance }}</td>
                            <td>{{ wallet.usuableBalance }}</td>
                            {# <td class="actions-btn-group">
                                {# <a href="{{ path('app_wallet_show', {'id': wallet.id}) }}">Show</a>
                                <a href="{{ path('app_wallet_edit', {'id': wallet.id}) }}">Edit</a> }
                            </td> #}
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="no-records">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# <div class="create-new-btn">
            <a href="{{ path('app_wallet_new') }}" class="btn btn-create-new">Create New</a>
        </div> #}
    </div>
{% endblock %}
